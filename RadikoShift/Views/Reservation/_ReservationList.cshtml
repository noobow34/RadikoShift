@using RadikoShift.EF
@model IEnumerable<Reservation>

<div id="reservation-list">
    <div class="container">
        <!-- PC: Table -->
        <div class="d-none d-md-block">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>番組</th>
                        <th>局</th>
                        <th>種別</th>
                        <th>スケジュール</th>
                        <th>状態</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.ProgramName</td>
                            <td>@r.StationName</td>
                            <td>@r.RepeatType</td>
                            <td>@RenderSchedule(r)</td>
                            <td>
                                <span class="badge bg-secondary">@r.Status</span>
                            </td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-danger cancel-btn"
                                        data-id="@r.Id">
                                    キャンセル
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile: Compact Card -->
        <div class="d-md-none">
            @foreach (var r in Model)
            {
                <div class="card mb-1 shadow-sm">
                    <div class="card-body py-2 px-3">

                        <div class="d-flex align-items-center justify-content-between">

                            <!-- 左側：情報 -->
                            <div class="me-2">
                                <div class="small fw-semibold">
                                    @r.ProgramName
                                </div>

                                <div class="small text-muted">
                                    @r.StationName
                                </div>

                                <div class="small text-muted">
                                    @RenderSchedule(r)
                                </div>

                                <div class="small mt-1">
                                    <span class="badge bg-info me-1">@r.RepeatType</span>
                                    <span class="badge bg-secondary">@r.Status</span>
                                </div>
                            </div>

                            <!-- 右側：ボタン -->
                            <div class="text-nowrap">
                                <button class="btn btn-sm btn-outline-danger cancel-btn"
                                        data-id="@r.Id">
                                    キャンセル
                                </button>
                            </div>

                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string RenderSchedule(Reservation r)
    {
        return r.RepeatType switch
        {
            RepeatType.Once =>
                $"{r.TargetDate:yyyy/MM/dd(ddd)} {r.StartTime:HH:mm} - {r.EndTime:HH:mm}",

            RepeatType.Daily =>
                $"毎日 {r.StartTime:HH:mm} - {r.EndTime:HH:mm}",

            RepeatType.Weekly =>
                $"毎週 {r.RepeatDays!.Value.ToJapanese()} {r.StartTime:HH:mm} - {r.EndTime:HH:mm}",

            _ => "-"
        };
    }
}